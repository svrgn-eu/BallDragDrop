<Window x:Class="BallDragDrop.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallDragDrop.Views"
        mc:Ignorable="d"
        Title="Ball Drag and Drop" 
        Height="300" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">
    
    <Border CornerRadius="10" Background="#F0F0F0" BorderBrush="#2266AA" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- App Logo/Image -->
            <Image Grid.Row="0" 
                   Source="/Resources/Ball/Ball01.png" 
                   Width="150" 
                   Height="150"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Margin="0,20,0,0"/>
            
            <!-- App Name -->
            <TextBlock Grid.Row="1" 
                       Text="Ball Drag and Drop" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,10"
                       Foreground="#2266AA"/>
            
            <!-- Loading Progress -->
            <StackPanel Grid.Row="2" Margin="20,0,20,20">
                <TextBlock x:Name="StatusText" 
                           Text="Loading..." 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <ProgressBar x:Name="LoadingProgress" 
                             Height="10" 
                             IsIndeterminate="True"
                             Background="LightGray"
                             Foreground="#2266AA"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>